{
  "name": "jaquizy",
  "version": "1.0.0",
  "description": "AI-powered study platform for students",
  "main": "src/main.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "node src/server/index.js",
    "start": "node src/server/index.js",
    "launch": "node launch-studybuddy.js",
    "desktop": "node launch-studybuddy.js",
    "dev:full": "NODE_ENV=development node src/server/index.js",
    "frontend": "node scripts/serve-frontend.js",
    "backend": "node src/server/index.js",
    "dev:separate": "concurrently \"npm run backend\" \"npm run frontend\"",
    "reset-db": "node scripts/reset-database-simplified.js",
    "reset-db-with-data": "node scripts/reset-database-simplified.js --with-test-data",
    "fresh-start": "npm run reset-db-with-data && npm run dev",
    "test-ollama": "curl http://localhost:3001/api/test-ollama-simple",
    "health-check": "curl http://localhost:3001/api/health",
    "create-shortcut": "node -e \"require('./launch-studybuddy.js').createDesktopShortcut()\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.0",
    "openai": "^4.104.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "sqlite3": "^5.1.7",
    "stripe": "^14.25.0",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/cli": "^5.5.0",
    "@capacitor/core": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.1",
    "fs-extra": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "terser": "^5.0.0",
    "vite": "^5.4.19",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.jaquizy.app",
    "productName": "Jaquizy",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "Vue": "readonly",
      "window": "readonly"
    }
  }
}
